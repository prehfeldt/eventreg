{% extends '::base.html.twig' %}
{% trans_default_domain "event" %}

{% set dateFormat %}
{% trans from "base" %}global.dateFormat{% endtrans %}
{% endset %}

{% block content %}
    <h1>{% trans %}event.list.headline{% endtrans %}</h1>

    {% trans with {'%events%': events|length} %}event.list.eventCount{% endtrans %}<br /><br />

    {% for event in events %}
        <div class="event">
            <h2>
                <img src="{{ asset('bundles/event/images/event_icon.png') }}" />
                <a href="{{ path("_event_details", {"id": event.getId()}) }}">{{ event.getName()|escape|title }}</a>
            </h2>
            <div class="details">
                {{ event.getDateTime().format(dateFormat) }} | {% trans with {'%name%': event.getOwner().getUsername()} %}event.list.ownerProfile{% endtrans %}
            </div>
            <div class="description">
                {{ event.getDescription()|escape|markdown }}
            </div>
            <div class="more">
                <div class="btn-group btn-group-sm">
                    <a href="{{ path("_event_details", {"id": event.getId()}) }}" class="btn btn-default"><span class="glyphicon glyphicon-info-sign"></span> {% trans %}event.list.details{% endtrans %}</a>

                    <a href="{{ path("_event_details", {"id": event.getId()}) }}#attendees" class="btn btn-default">{% trans with {'%attendees%': event.getAttendees()|length} %}event.list.attendeeCount{% endtrans %}</a>

                    {% if is_granted('ROLE_USER')  %}
                        <a href="{{ path("_event_attend", {"id": event.getId()}) }}" class="btn btn-default"><span class="glyphicon glyphicon-user"></span> {% trans %}event.list.attend{% endtrans %}</a>
                    {% endif %}

                    {% if (app.user and event.getOwner().getId() == app.user.id) or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path("_event_edit", {"id": event.getId()}) }}" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> {% trans %}event.details.edit{% endtrans %}</a>
                        <a href="{{ path("_event_remove", {"id": event.getId()}) }}" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> {% trans %}event.details.remove{% endtrans %}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}